// C++ recursive function to
// solve tower of hanoi puzzle
#include <bits/stdc++.h>
using namespace std;
 
void towerOfHanoi(int n, char from_rod, char to_rod,      //userdefined function for recursive call
                  char aux_rod)
{
    if (n == 0) {
        return;
    }
    towerOfHanoi(n - 1, from_rod, aux_rod, to_rod);           //userdefined function for first set of shifting
    cout << "Move disk " << n << " from rod " << from_rod
         << " to rod " << to_rod << endl;
    towerOfHanoi(n - 1, aux_rod, to_rod, from_rod);           //userdefined function for second set of shifting
}
 
// giving values
int main()
{
    int N ;
    cin>>N;         //number of disk
 
    // A, B and C are names of rods
    towerOfHanoi(N, 'A', 'C', 'B');       //calling of function
    return 0;
}
